@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "All Employees";

    // ViewData is a dictionary (key / value).Values are stored as object.
    // You need to cast to the correct type when retrieving.
    // => Requires casting, but it’s still WEAKLY typed (compiler doesn’t check).
    string ViewDataMessage = ViewData["Message"] as string;

    // ViewBag is a dynamic wrapper around ViewData.
    // No casting needed because it's dynamic, but type errors show only at runtime.
    // => WEAKLY typed (even weaker than ViewData, since compiler can't verify anything).
    string ViewBagMessage = ViewBag.Message;

}

@*<div class="alert alert-success">
        @ViewData["Message"]
    </div>*@

@*<div class="alert alert-success">
        @ViewBag.Message
    </div>*@

<a class="btn btn-primary" asp-action="Create">Add New Employee</a>


@if (Model.Count() > 0)
{
    <h1>All Employees </h1>
    <br />
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Employee's Name'" />
            </div>
            <div class="col-4">
                <input class="btn btn-info" type="submit" value="Search" />
            </div>
        </form>

    </div>
   

    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Image)</td>
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Age)</td>
                <td>@Html.DisplayNameFor(E => E.Salary)</td>
                <td>@Html.DisplayNameFor(E => E.Address)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.Phone)</td>
                <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                <td>@Html.DisplayNameFor(E => E.HireDate)</td>
                <td>@Html.DisplayNameFor(E => E.Department)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@employee.ImageName" class="rounded" height="80" width="80" alt="Employee Image" /></td>
                    <td>@Html.DisplayFor(e => employee.Name)</td>
                    <td>@Html.DisplayFor(e => employee.Age)</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@Html.DisplayFor(e => employee.Address)</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@Html.DisplayFor(e => employee.Phone)</td>
                    <td>
                        @if (employee.IsActive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td>
                    <td>@Html.DisplayFor(e => employee.HireDate)</td>
                    <td>@Html.DisplayFor(e => employee.Department.Name)</td>
                    <partial name="../_BottonsPartialView" model="employee.Id" />

                </tr>
            }
        </tbody>

    </table>
}

else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no departments</h3>
    </div>
}

