@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayOut.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">

        <form asp-action="Login">

            <input class="text" asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />

            <input class="text" asp-for="Password" placeholder="Password" type="password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />

            <label class="anim">
                <input asp-for="RememberMe" type="checkbox" class="checkbox" />
                <span>Remember Me</span>
            </label>

            <div class="wthree-text">
                <input type="submit" value="SIGN IN" />
            </div>

        </form>

        <p>
            Don't have an Account?
            <a asp-action="Register">SIGN UP Now!</a>
        </p>

        <p><a asp-action="ForgotPassword"> Forgot Password </a></p>

    </div>
</div>

@section _ValidationScriptsPartial {
    <partial name="_ValidationScriptsPartial" />
}
