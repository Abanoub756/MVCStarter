@{
    ViewBag.Title = "Password Reset Successful";
    Layout = "~/Views/Shared/_AuthLayOut.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">

        <h2 style="color: #fff; margin-bottom: 20px; text-align:center;">
            Your password has been reset successfully
        </h2>

        <p style="color: #ddd; text-align:center; margin-bottom: 30px;">
            You can now log in with your new password.
        </p>

        <div class="wthree-text">
            <a asp-action="Login" class="btn"
               style="padding:10px 20px; background:#fff; color:#000; border-radius:5px;">
                Go to Login
            </a>
        </div>

    </div>
</div>
