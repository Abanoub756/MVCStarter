@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete @Model.Name Department</h1>
<br />
<form asp-action="Delete">

    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>


    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>

    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input readonly class="form-control" type="date" asp-for="DateOfCreation" />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger mt-3" /> |
    <a asp-action="Index" class="btn btn-light mt-3">Cancel</a>


</form>