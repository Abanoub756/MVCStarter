@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department @Model.Name Details</h1>


<div>
    <label class="col-form-label" asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code" />
</div>


<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>

<div>
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input readonly class="form-control" type="date" asp-for="DateOfCreation" />
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary mt-3"> Edit</a> |
<a asp-action="Index" class="btn btn-light mt-3">Back to List</a>

