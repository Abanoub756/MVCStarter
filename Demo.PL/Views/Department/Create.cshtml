@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<br />

<form asp-action="Create">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>


    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" type="date" asp-for="DateOfCreation" />
    </div>

    <input type="submit" value="Create" class="btn btn-primary mt-3" />
    <a asp-action="Index" class="btn btn-light mt-3">Back to List</a>
</form>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}


